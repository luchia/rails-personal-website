= form_for(@portfolio) do |f|
  = if @portfolio.errors.any?
    %div{ :id => "error_explanation" }
      %h2
        = pluralize(@portfolio.errors.count, "error") 
        prohibited this portfolio from being saved:

      %ul
      = @portfolio.errors.full_messages.each do |msg|
        %li 
          = msg

  %div{ :class => "field" }
    = f.label :title, :class => "grey"
    %br
    = f.text_field :title

  %div{ :class => "field" }
    = f.label :content, :class => "grey"
    %br
    = f.text_area :content, rows: 10

  %div{ :class => "field" }
    = f.label :image, :class => "grey"
    %br
    = f.text_field :image

  %div{ :class => "actions" }
    = f.submit