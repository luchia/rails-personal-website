#work
  .container
    #text-container
      .row
        .col-md-8.col-md-offset-2
          %h2.orange Portfolio
          %p.left-aligned=link_to 'New Entry', new_portfolio_path
          %br

          - @portfolios.each do |portfolio|
            %h3
              %a{ :href => '/portfolios/'+portfolio.id.to_s }=markdown(portfolio.content).html_safe
            %p=link_to 'Edit', edit_portfolio_path(portfolio)
            %p=link_to 'Delete', portfolio, method: :delete, data: { confirm: 'Are you sure?' }