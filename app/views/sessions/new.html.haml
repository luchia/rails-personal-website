#work
	.container
		#text-container
			.row
				%section
					.col-md-5.col-md-offset-6.pushdown
						%h1.orange Sign In
						%br
						= if flash[:alert]
							%p{ :id => "notice" }
								=flash[:alert]
						%br

						= form_tag do
							%fieldset
							%div
								%br
								=label_tag :name, 'Name:', :class => "grey"
								=text_field_tag :name, params[:name]
							%div
								%br
								=label_tag :password, 'Password:', :class => "grey"
								=password_field_tag :password, params[:password]
							%div
								%br
								=submit_tag "Login"