%div{ :id => "work" }
	%div{ :class => "container" }
		%div{ :id => "text-container" }
			%div{ :class => "row" }
				%section
					%div{ :class => "col-md-5 col-md-offset-6 pushdown" }
						%h1{ :class => "grey" } Sign In
						%br
						= if flash[:alert]
							%p{ :id => "notice" }
								=flash[:alert]

						= form_tag do
							%fieldset
							%div
								%br
								=label_tag :name, 'Name:'
								=text_field_tag :name, params[:name]
							%div
								%br
								=label_tag :password, 'Password:'
								=password_field_tag :password, params[:password]
							%div
								%br
								=submit_tag "Login"