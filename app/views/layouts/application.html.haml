!!!
%html
%head
	%title Luchia Bloomfield
	= stylesheet_link_tag "application", controller.controller_name
	= javascript_include_tag "application", controller.controller_name
	= csrf_meta_tags
	%meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0"}

%body
	#nav.hidden-sm.hidden-xs
		%ul.nav.text-right
			-if User.find_by_id(session[:user_id])
				%li.active
					=link_to 'Home', '/'
				%li
					=link_to 'About', '/about/'
				%li
					=link_to 'Work', '/portfolios/'
				%li
					=link_to 'Journal', '/journals/'
				%li
					=link_to 'Get in Touch', '/contact'
				%li
					|
				%li
					=link_to 'Users', '/users'
				%li
					=link_to 'Log Out', logout_path, method: :delete
			-else
				%li.active
					=link_to 'Home', '/'
				%li
					=link_to 'About', '/about/'
				%li
					=link_to 'Work', '/portfolios/'
				%li
					=link_to 'Journal', '/journals/'
				%li
					=link_to 'Get in Touch', '/contact'

	#nav.visible-xs.visible-sm
		%ul.mobi
			-if User.find_by_id(session[:user_id])
				%li.active
					=link_to 'Home', '/'
				%li
					=link_to 'About', '/about/'
				%li
					=link_to 'Work', '/portfolios/'
				%li
					=link_to 'Journal', '/journals/'
				%li
					=link_to 'Get in Touch', '/contact'
				%li
					|
				%li
					=link_to 'Users', '/users'
				%li
					=link_to 'Log Out', logout_path, method: :delete
			-else
				%li.active
					=link_to 'Home', '/'
				%li
					=link_to 'About', '/about/'
				%li
					=link_to 'Work', '/portfolios/'
				%li
					=link_to 'Journal', '/journals/'
				%li
					=link_to 'Get in Touch', '/contact'

	= yield			