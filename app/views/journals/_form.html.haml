= form_for(@journal) do |f|
  = if @journal.errors.any?
    #error_explanation
      %h2
        = pluralize(@journal.errors.count, "error") 
        prohibited this journal from being saved:

      %ul
      = @journal.errors.full_messages.each do |msg|
        %li 
          = msg

  .field
    = f.label :title
    %br 
    %br
    = f.text_field :title

  .field
    = f.label :date
    %br
    %br
    = f.datetime_select :date

  .field
    = f.label :content
    %br
    %br
    = f.text_area :content, rows: 10
    %br

  .actions
    = f.submit